@base             <http://purl.org/oseg/ontologies/OTRL> .
@prefix :         <#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema:   <http://schema.org/> .
@prefix terms:    <http://purl.org/dc/terms/> .

<>
  a owl:Ontology ;
  owl:versionInfo "1.0" ;
  owl:versionIRI <> ;
  rdfs:label "TLR & DRL for OSH meta data"@en ;
  rdfs:comment "Technology Readiness Level can be used to assess the project stage of Open Source Hardware"@en ;
  terms:contributor "Martin HÃ¤uer <martin.haeuer@ose-germany.de>" ;
  terms:contributor "Robin Vobruba <hoijui.quaero@gmail.com>" ;
  terms:license "GPL-3.0-or-later" .

# properties & classes: (description from NASA are used under public domain)

:OTRL
  a owl:class ;
  rdfs:label "open TLR"@en ;
  rdfs:comment "Technology Readiness Level for open source hardware"@en ;
  # That's a main class then!
  .

:ODRL
  a owl:class ;
  rdfs:label "open DLR"@en ;
  rdfs:comment "Documentation Readiness Level for open source hardware"@en ;
  # That's a main class then!
  .

:goal
  a owl:DatatypeProperty ;
  rdfs:label "goal"@en ;
  rdfs:comment "Goal or purpose of this OTRL/ODRL"@en ;
  rdfs:range schema:Text ;
  owl:cardinality 1 ;
  rdfs:domain [ owl:unionOf (:OTRL :ODRL) ] ;
  .

:exitCriteria
  a owl:DatatypeProperty ;
  rdfs:label "Exit criteria"@en ;
  rdfs:comment "Criteria to exit this OTRL for the next OTRL; inspired by: https://www.nasa.gov/pdf/458490main_TRL_Definitions.pdf"@en ;
  rdfs:range schema:Text ;
  owl:cardinality 1 ;
  rdfs:domain [ owl:unionOf (:OTRL :ODRL) ] ;
  .

# the open technology readiness levels (OTLR):

:OTRL1
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-1"@en ;
  rdfs:comment "ideation"@en ;
  :goal "product specifications/requirements"@en ;
  :exitCriteria "ToDo."@en ;
  .

:OTRL2
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-2"@en ;
  rdfs:comment "conception"@en ;
  :goal "proof of concept"@en ;
  :exitCriteria "ToDo."@en ;
  .

:OTRL3
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-3"@en ;
  rdfs:comment "technical design"@en ;
  :goal "early prototype"@en ;
  :exitCriteria "ToDo."@en ;
  .

:OTRL4
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-4"@en ;
  rdfs:comment "product design"@en ;
  :goal "minimum viable product"@en ;
  :exitCriteria "ToDo."@en ;
  .

:OTRL5
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-5"@en ;
  rdfs:comment "safe product"@en ;
  :goal "CE certification"@en ;
  .

# the open documentation readiness levels (OTLR):

:ODRL1
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-1"@en ;
  rdfs:comment "documentation started & accessible"@en ;
  :goal "making information available as free/open source material"@en ;
  :exitCriteria "(OSHWA-compliant) free/open license applied on published material"@en ;
  .

:ODRL2
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-2"@en ;
  rdfs:comment "minimal documentation"@en ;
  :goal "enabling usability of the documentation by the provision of essential files and information"@en ;
  :exitCriteria "ToDo."@en ;
  .

:ODRL3
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-3"@en ;
  rdfs:comment "full documentation"@en ;
  :goal "full exploitability of the documentation"@en ;
  :exitCriteria "stable release"@en ;
  .

:ODRL3Star
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-3*"@en ;
  rdfs:comment "audited documentation"@en ;
  :goal "public evidence of documentation maturity"@en ;
  :exitCriteria "proof of compliance after DIN SPEC 3105-2 or equivalent (such as a scientific publication, OSHWA certification, RYF certification)"@en ;
  .

:ODRL4
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-5"@en ;
  rdfs:comment "audited documentation including CE certification documents"@en ;
  :goal "enabling decentralised commercial distribution"@en ;
  .
