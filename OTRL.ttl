@base             <http://purl.org/oseg/ontologies/OTRL> .
@prefix :         <#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema:   <http://schema.org/> .
@prefix dcterms:  <http://purl.org/dc/terms/> .

<>
  a owl:Ontology ;
  owl:versionInfo "1.0" ;
  owl:versionIRI <> ;
  rdfs:label "TLR & DRL for OSH meta data"@en ;
  rdfs:comment "Technology Readiness Level can be used to assess the project stage of Open Source Hardware"@en ;
  dcterms:contributor "Martin HÃ¤uer <martin.haeuer@ose-germany.de>" ;
  dcterms:contributor "Robin Vobruba <hoijui.quaero@gmail.com>" ;
  dcterms:license <https://www.gnu.org/licenses/gpl-3.0.txt> ;
  .

# properties & classes: (description from NASA are used under public domain)

:OTRL
  a owl:class ;
  rdfs:label "open TLR"@en ;
  rdfs:comment "Technology Readiness Level for open source hardware"@en ;
  .

:Odrl
  a owl:class ;
  rdfs:label "open DLR"@en ;
  rdfs:comment "Documentation Readiness Level for open source hardware"@en ;
  .

:goal
  a owl:DatatypeProperty ;
  rdfs:label "goal"@en ;
  rdfs:comment "Goal or purpose of this OTRL/ODRL"@en ;
  rdfs:range schema:Text ;
  owl:cardinality 1 ;
  rdfs:domain [ owl:unionOf (:Otrl :Odrl) ] ;
  .

:exitCriteria
  a owl:DatatypeProperty ;
  rdfs:label "Exit criteria"@en ;
  rdfs:comment "Criteria to exit this OTRL for the next OTRL; inspired by: https://www.nasa.gov/pdf/458490main_TRL_Definitions.pdf"@en ;
  rdfs:range schema:Text ;
  owl:cardinality 1 ;
  rdfs:domain [ owl:unionOf (:Otrl :Odrl) ] ;
  .

# the open technology readiness levels (OTLR):

:Otrl1
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-1"@en ;
  rdfs:comment "Ideation / needs identification"@en ;
  :goal "Product idea, needs and initial specifications are defined."@en ;
  :exitCriteria "ToDo."@en ;
  .

:Otrl2
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-2"@en ;
  rdfs:comment "Conception"@en ;
  :goal "Mature product concept has been formulated"@en ;
  :exitCriteria "ToDo."@en ;
  .

:Otrl3
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-3"@en ;
  rdfs:comment "Development"@en ;
  :goal "Product model is developed"@en ;
  :exitCriteria "ToDo."@en ;
  .

:Otrl4
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-4"@en ;
  rdfs:comment "Prototyping and testing"@en ;
  :goal "Full functional prototype is built and tested"@en ;
  :exitCriteria "ToDo."@en ;
  .

:Otrl5
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-5"@en ;
  rdfs:comment "Manufacturing development"@en ;
  :goal "Fairly reliable processes identified and characterised"@en ;
  .

:Otrl6
  a owl:class ;
  rdfs:subClassOf :OTRL ;
  rdfs:label "OTRL-6"@en ;
  rdfs:comment "Product qualification"@en ;
  :goal "Certificate marking conformity assessment or comparable"@en ;
  .

# the open documentation readiness levels (OTLR):

:Odrl1
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-1"@en ;
  rdfs:comment "Documentation process commenced"@en ;
  :goal "Published information under free open source licence"@en ;
  :exitCriteria "(OSHWA-compliant) free/open license applied on published material"@en ;
  .

:Odrl2
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-2"@en ;
  rdfs:comment "Collaborative documentation in progress"@en ;
  :goal "Provision of documentation files and in editable formats enabling collaboration development"@en ;
  :exitCriteria "ToDo."@en ;
  .

:Odrl3
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-3"@en ;
  rdfs:comment "Full documentation published"@en ;
  :goal "Complete documentation as per DIN SPEC 3105-1"@en ;
  :exitCriteria "stable release"@en ;
  .

:Odrl3Star
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-3*"@en ;
  rdfs:comment "Full documentation published & audited"@en ;
  :goal "Public evidence of documentation maturity"@en ;
  :exitCriteria "proof of compliance after DIN SPEC 3105-2 or equivalent (such as a scientific publication, OSHWA certification, RYF certification)"@en ;
  .

:Odrl4
  a owl:class ;
  rdfs:subClassOf :ODRL ;
  rdfs:label "ODRL-5"@en ;
  rdfs:comment "Full documentation for product qualification"@en ;
  :goal "Product qualification documents published enabling decentralised commercial distribution"@en ;
  .

